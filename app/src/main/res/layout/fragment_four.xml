<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="20dp"
                android:text="莫非"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/user_tel_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                app:sCenterTextColor="@color/black"
                app:sCenterTextSize="16sp"
                app:sCenterTextString="18918792365"
                app:sCenterViewGravity="left_center"
                app:sLeftIconRes="@drawable/ic_phone_number" />

            <com.allen.library.SuperTextView
                android:id="@+id/user_tel_other"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                app:sCenterTextColor="@color/black"
                app:sCenterTextSize="16sp"
                app:sCenterTextString="18918792365"
                app:sCenterViewGravity="left_center"
                app:sLeftIconRes="@drawable/ic_telnumber" />

            <com.allen.library.SuperTextView
                android:id="@+id/unit_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:sCenterMaxEms="30"
                app:sCenterTextColor="@color/black"
                app:sCenterTextSize="16sp"
                app:sCenterTextString="市燃气管理处"
                app:sCenterViewGravity="left_center"
                app:sLeftIconRes="@drawable/ic_bumen" />

            <com.allen.library.SuperTextView
                android:id="@+id/unit_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:sCenterMaxEms="30"
                app:sCenterTextColor="@color/black"
                app:sCenterTextSize="16sp"
                app:sCenterTextString="徐家汇路579号"
                app:sCenterViewGravity="left_center"
                app:sLeftIconRes="@drawable/ic_address" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <com.allen.library.SuperTextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextColor="@color/black_0"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="软件更新"
        app:sRightMaxEms="25"
        app:sRightTextColor="@color/red_1"
        app:sRightTextSize="14sp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:sLeftTextColor="@color/black_0"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="使用帮助"
        app:sRightIconRes="@drawable/arrow_right_red" />


    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/copy_bg"
        android:gravity="center"
        android:padding="8dp"
        android:text="退出登录"
        android:textColor="#ef0e0e"
        android:textSize="18sp" />

</LinearLayout>