<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="360dp"
    android:orientation="vertical">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#00ffffff">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@color/white"
                    android:gravity="center_horizontal|bottom"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:typeface="monospace" />

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/item_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    app:aiv_BoarderColor="@color/black"
                    app:aiv_BoarderWidth="2dp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/name"
                    android:layout_marginEnd="5dp"
                    android:padding="4dp"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <com.allen.library.SuperTextView
                android:id="@+id/phoneNumber1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                app:sLeftBottomTextSize="24sp"
                app:sLeftBottomTextString="13924481442"
                app:sLeftIconMarginLeft="20dp"
                app:sRightIconRes="@drawable/ic_bohao" />

            <com.allen.library.SuperTextView
                android:id="@+id/phoneNumber2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:visibility="gone"
                app:sLeftBottomTextSize="18sp"
                app:sLeftBottomTextString="13924481442"
                app:sLeftIconMarginLeft="20dp"
                app:sRightIconRes="@drawable/ic_bohao" />

            <com.allen.library.SuperTextView
                android:id="@+id/quxian"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:visibility="gone"
                app:sLeftBottomTextColor="@color/black"
                app:sLeftBottomTextSize="16sp"
                app:sLeftBottomTextString="所属区县"
                app:sLeftIconRes="@drawable/ic_quxian"
                app:sRightBottomTextString="徐汇区" />

            <com.allen.library.SuperTextView
                android:id="@+id/bumen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                app:sLeftBottomTextColor="@color/black"
                app:sLeftBottomTextSize="16sp"
                app:sLeftBottomTextString="所属部门"
                app:sLeftIconRes="@drawable/ic_bumen"
                app:sRightBottomMaxEms="20"
                app:sRightBottomTextString="徐汇区" />

            <com.allen.library.SuperTextView
                android:id="@+id/dizhi_danwei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                app:sLeftIconRes="@drawable/ic_address"
                app:sLeftTextColor="@color/black"
                app:sLeftTextSize="16sp"
                app:sLeftTextString="单位地址"
                app:sRightBottomTextString="宛平南路80号" />

            <com.allen.library.SuperTextView
                android:id="@+id/dianha_danwei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:visibility="gone"
                app:sLeftBottomTextColor="@color/black"
                app:sLeftBottomTextSize="16sp"
                app:sLeftBottomTextString="单位电话"
                app:sLeftIconRes="@drawable/ic_phone"
                app:sRightBottomTextString="6645624" />

            <com.allen.library.SuperTextView
                android:id="@+id/chuanzhen_danwei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:visibility="gone"
                app:sLeftBottomTextColor="@color/black"
                app:sLeftBottomTextSize="16sp"
                app:sLeftBottomTextString="单位传真"
                app:sLeftIconRes="@drawable/ic_chuanzhen"
                app:sRightBottomMaxEms="30"
                app:sRightBottomTextString="6645624" />

            <com.allen.library.SuperTextView
                android:id="@+id/youbian_danwei"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:visibility="gone"
                app:sLeftBottomTextColor="@color/black"
                app:sLeftBottomTextSize="16sp"
                app:sLeftBottomTextString="单位邮编"
                app:sLeftIconRes="@drawable/ic_youbian"
                app:sRightBottomTextString="6645624" />
        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>